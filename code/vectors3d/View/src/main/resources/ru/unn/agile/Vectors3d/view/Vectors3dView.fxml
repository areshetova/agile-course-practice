<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import ru.unn.agile.Vectors3d.viewmodel.*?>

<AnchorPane fx:id="view" prefHeight="450.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="ru.unn.agile.Vectors3d.view.Vectors3dView">
  <fx:define>
    <Vectors3dViewModel fx:id="viewModel" />
  </fx:define>
  <children>
    <VBox fillWidth="true" spacing="10.0">
      <children>
        <fx:include fx:id="firstVector" source="VectorView.fxml" text="First Vector" />
        <fx:include fx:id="secondVector" source="VectorView.fxml" text="Second Vector" />
        <Accordion fx:id="resultAccordion" />
        <HBox spacing="50.0">
          <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="dotProductButton" text="Dot Product" />
            <Button fx:id="crossProductButton" text="Cross Product" />
            <Region HBox.hgrow="ALWAYS" />
          </children>
        </HBox>
        <TextArea prefHeight="129.0" prefWidth="529.0" wrapText="true" text="${viewModel.logs}" />
      </children>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </VBox>
  </children>
</AnchorPane>
